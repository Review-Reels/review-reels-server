// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model User {
  id                         String          @id @default(uuid())
  email                      String          @unique
  username                   String?         @unique
  merchantName               String          @default("")
  name                       String?
  password                   String?
  picture                    String?
  authType                   String          @default("native")
  emailVerified              Boolean         @default(false)
  createdAt                  DateTime        @default(now())
  emailVerifyHash            String          @default("")
  passwordResetHash          String          @default("")
  passwordResetHashTimeStamp DateTime        @default(now())
  ReviewRequest              ReviewRequest[]
}

model ReviewRequest {
  id             String           @id @default(uuid())
  name           String           @default("")
  askMessage     String?          @db.Text()
  videoUrl       String
  imageUrl       String           @default("")
  size           Int
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now())
  user           User             @relation(fields: [userId], references: [id])
  userId         String
  ReviewResponse ReviewResponse[]
  EmailTracker   EmailTracker[]
}

model ReviewResponse {
  id               String         @id @default(uuid())
  replyMessage     String?        @db.Text()
  customerName     String
  whatYouDo        String?
  videoUrl         String
  imageUrl         String         @default("")
  size             Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now())
  isRead           Boolean        @default(false)
  requestMessage   ReviewRequest  @relation(fields: [requestMessageId], references: [id], onDelete: Cascade)
  requestMessageId String
  EmailTracker     EmailTracker[]
}

model EmailTracker {
  id               String          @id @default(uuid())
  emailId          String
  customerName     String
  subject          String?         @default("")
  status           Boolean
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @default(now())
  reviewResponse   ReviewResponse? @relation(fields: [reviewResponseId], references: [id], onDelete: SetNull)
  reviewResponseId String?
  ReviewRequest    ReviewRequest?  @relation(fields: [reviewRequestId], references: [id], onDelete: SetNull)
  reviewRequestId  String?
}

model Subscription {
  id                        String  @id @default(uuid())
  seller_id                 String
  product_id                String
  product_name              String
  permalink                 String
  product_permalink         String
  short_product_id          String
  email                     String
  price                     String
  gumroad_fee               String
  currency                  String
  quantity                  String
  discover_fee_charged      String
  can_contact               String
  referrer                  String
  card                      Json
  order_number              String
  sale_id                   String
  sale_timestamp            String
  purchaser_id              String
  subscription_id           String
  url_params                Json?
  variants                  Json
  test                      String
  ip_country                String
  recurrence                String
  is_gift_receiver_purchase String
  refunded                  String
  resource_name             String?
  disputed                  String
  dispute_won               String
}
